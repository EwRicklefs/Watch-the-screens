<div class="container">
    <form action="/api/createGame" method="POST">
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="duration-text">Round Duration (minutes)</span>
                </div>
                <input type="number" class="form-control" id="input-duration" aria-describedby="duration-text"
                    value="30" min="1" name="round_duration">
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="game-description">Game Description </span>
                </div>
                <input type="text" class="form-control" id="input-description" aria-describedby="game-description" name="game_description">
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="decay-text">Article Decay (Rounds)</span>
                </div>
                <input type="number" class="form-control" id="input-decay" aria-describedby="decay-text" value="2" min="1" name="article_decay">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Start Game</button>
    </form>
</div>