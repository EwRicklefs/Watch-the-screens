<div class="container">
    <div class="row">
        <span id="round">Round#</span>
        <input type="time" id="timer" value="##:##">
        <button id="edit"></button>
        <button id="pause-button">#Pause/Play</button>
    </div>
    <div class="row">
        <div class="col col-md-8">
            <div class="row">
                <ul>
                    <li>Cat attack +5
                        <button>edit</button>
                    </li>
                    <li>Dog attack -5
                        <button>edit</button>
                    </li>
                    <li>
                        <button>+</button>
                    </li>
                </ul>
            </div>
            <div class="row">
                <ul>
                   <li><a href="#">www.linktootherview</a></li>
                   <li><a href="#">www.linktootherview</a></li>
                   <li><a href="#">www.linktootherview</a></li>
                   <li><a href="#">www.linktootherview</a></li>
                </ul>
            </div>
        </div>
        <div class="col col-md-4">
            <div class="row">
                <h2>Remove Article</h2>
                <form action="POST">
                    <select name="article-for-removal" id="remove-article-dropdown">
                        <option value="article1ID">#Article 1 title</option>
                        <option value="article2ID">#Article 2 title</option>
                    </select>
                    <button id="remove-article-button">Remove</button>
                </form>
            </div>
            <div class="row">
                <form action="POST">
                    <label for="default-time-text">Change Default Time (minutes)</label>
                    <input type="number" id="default-time-text" value="20">
                </form>
            </div>
            <div class="row">
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#global-post-modal">
                    Create Global Post
                </button>
            </div>
            <div class="row">
                <button>END GAME</button>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="global-post-modal" tabindex="-1" role="dialog" aria-labelledby="global-post-Label"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="gobal-post-label">Create Global Post</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <label for="global-post-text">Post Text</label>
                        <input id="global-post-text" type="text">
                        <label for="global-post-text">Post Duration</label>
                        <input id="global-post-duration" type="number">
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary">Send Global Post</button>
                </div>
            </div>
        </div>
    </div>
</div>